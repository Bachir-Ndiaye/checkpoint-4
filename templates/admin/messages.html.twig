{% extends 'admin-base.html.twig' %}

{% block body %}

    <div class="main-body">
        <div class="received-msq">
            <h2>
                <i class="fas fa-download"></i>
                Messages reçus () :
            </h2>
            {% if received is not empty %}
                {% for received in received  %}
                    <div class="box-msg">
                        <p>
                            <img src="{{ received.recipient.avatar }}" alt="Avatar de lexpediteur">
                            {{ received.createdAt|date }} -
                            Reçu de <span>{{ received.sender.lastname }}</span>
                        </p>
                        <h5>
                            {{ received.message }}
                        </h5>
                    </div>
                {% endfor %}
            {% else %}
                <p>Pas de messages reçus.</p>
            {% endif %}
        </div>

        <div class="sent-msg">
            <h2>
                <i class="fas fa-upload"></i>
                Messages envoyés () :</h2>
            {% if sent is not empty %}
                {% for sent in sent  %}
                    <div class="box-msg">
                        <p>
                            <img src="{{ sent.sender.avatar }}" alt="Avatar de lexpediteur">
                            {{ sent.createdAt|date }} -
                            Envoyé à <span>{{ sent.recipient.lastname }}</span>
                        </p>
                        <h5>
                            {{ sent.message }}
                        </h5>
                    </div>
                {% endfor %}
            {% else %}
                <p>Pas de messages envoyés</p>
            {% endif %}
        </div>

        <div class="write-msg">
            <h2>
                <i class="fas fa-paper-plane"></i>
                Envoyer un message :</h2>
            {{ form(form) }}
        </div>
    </div>
{% endblock %}

